{
  "name": "mcp-figma-workspace",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @mcp/mcp-server && npm run build -w @mcp/mcp-gateway && node scripts/bundle-gateway.mjs",
    "build:vercel": "cd packages/mcp-server && ../../node_modules/.bin/tsc",
    "dev:plugin": "npm run dev -w @mcp/figma-plugin",
    "dev:gateway": "npm run build -w @mcp/mcp-server && npm run build -w @mcp/mcp-gateway && npm run dev -w @mcp/mcp-gateway",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@types/node": "^22.10.2",
    "esbuild": "^0.24.2",
    "eslint": "^9.18.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
